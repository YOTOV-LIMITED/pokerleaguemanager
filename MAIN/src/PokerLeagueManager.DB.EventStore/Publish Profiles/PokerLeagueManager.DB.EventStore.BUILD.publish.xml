<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <IncludeCompositeObjects>True</IncludeCompositeObjects>
    <TargetDatabaseName>PokerLeagueManager.DB.EventStore</TargetDatabaseName>
    <DeployScriptFileName>PokerLeagueManager.DB.EventStore.sql</DeployScriptFileName>
    <TargetConnectionString>Data Source=localhost\BUILD;Integrated Security=True;Pooling=False</TargetConnectionString>
    <ScriptDatabaseOptions>True</ScriptDatabaseOptions>
    <BlockOnPossibleDataLoss>False</BlockOnPossibleDataLoss>
    <CreateNewDatabase>True</CreateNewDatabase>
    <DeployDatabaseInSingleUserMode>True</DeployDatabaseInSingleUserMode>
    <ProfileVersionNumber>1</ProfileVersionNumber>
  </PropertyGroup>
  <ItemGroup>
    <SqlCmdVariable Include="PublishEnvironment">
      <Value>Build</Value>
    </SqlCmdVariable>
  </ItemGroup>
</Project>